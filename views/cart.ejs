<%- include('partials/header') -%>
<link href="/css/index.css" rel="stylesheet" />
<body class="bg-light">
  <style>
    img {
      height: 60px;
      width: 50px;
    }
  </style>

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Carrito de Compras</h1>
    </div>
  </section>

  <div class="container mb-4">
    <div class="row">
      <div class="col-12">
        <div class="table-responsive">
          <table id="cart-table" class="table table-striped">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Producto</th>
                <th scope="col" class="text-center">Cantidad</th>
                <th scope="col" class="text-right">Costo</th>
                <th></th>
              </tr>
              <tr>
                <td><img src="/img/portfolio/botella1.jpg" /></td>
                <td>Tequila Mango</td>
                <td>
                  <div class="input-group">
                    <input
                      type="text"
                      class="form-control"
                      placeholder="Cantidad"
                      aria-label="Cantidad"
                      aria-describedby="basic-addon2"
                      value="1"
                    />
                  </div>
                </td>
                <td class="text-right">$1000</td>
                <td class="text-right">
                  <button
                    class="btn btn-sm btn-danger"
                    id="id123"
                    onclick="eliminarProd('id123')"
                  >
                    Eliminar
                  </button>
                </td>
              </tr>
            </thead>
            <tbody id="showProdTable"></tbody>
            <tr id="totalPrice"></tr>
          </table>
        </div>
      </div>
      <div class="col mb-2">
        <div class="row">
          <div class="col-sm-12  col-md-6 text-right">
            <button
              id="continue_button"
              class="btn btn-lg  btn-block btn-warning"
              href="/shop"
            >
              Continuar Comprando
            </button>
          </div>
          <div class="col-sm-12 col-md-6 text-right">
            <button
              id="checkout_button"
              class="btn btn-lg btn-block btn-success text-uppercase"
            >
              Checkout
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <link
    href="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.css"
    rel="stylesheet"
  />

  <script src="https://unpkg.com/bootstrap-table@1.15.5/dist/bootstrap-table.min.js"></script>
  <script type="text/javascript" src="/js/api_calls/cart.js"></script>
</body>
<%- include('partials/footer') -%>
